
# ===== Environment Variables Example =====
# Copy this file to .env and update with your values

# Environment
NODE_ENV=production
PORT=3000

# Application URLs
FRONTEND_URL=http://localhost:3001
ADMIN_CMS_URL=http://localhost:3002
API_URL=http://localhost:3000

# Database (Docker container networking)
DATABASE_URL="mysql://vietshort_user:vietshort_pass@mysql:3306/vietshort"
DATABASE_READ_REPLICA_URL=
DATABASE_SLOW_QUERY_MS=2000

# Redis (Docker container networking)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=vietshort:

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production
COOKIE_SECRET=your-cookie-secret-change-in-production
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
AUTH_RATE_LIMIT_TTL=900
AUTH_RATE_LIMIT_LIMIT=5

# File Storage (Cloudflare R2) - Update with real values
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY=your-access-key
R2_SECRET_KEY=your-secret-key
R2_BUCKET=vietshort-media
SIGNED_URL_SECRET=signed-url-secret-change-in-production
SIGNED_URL_EXPIRY=3600

# CDN
CDN_BASE_URL=https://pub-2468c7a122304c9bad1f5d1951af872c.r2.dev

# Payment Gateways - Sandbox/Test values
VNPAY_TMN_CODE=your-vnpay-tmn-code
VNPAY_HASH_SECRET=your-vnpay-hash-secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:3001/payment/vnpay/return

MOMO_PARTNER_CODE=your-momo-partner-code
MOMO_ACCESS_KEY=your-momo-access-key
MOMO_SECRET_KEY=your-momo-secret-key
MOMO_ENDPOINT=https://test-payment.momo.vn

# Email
EMAIL_FROM=noreply@vietshort.vn
EMAIL_API_KEY=your-email-api-key
RESEND_API_KEY=

# Video Processing
FFMPEG_PATH=ffmpeg
WHISPER_PATH=whisper
MAX_VIDEO_SIZE=5368709120
ALLOWED_VIDEO_FORMATS=mp4,mov,avi,mkv

# AI Services
# Get your FREE Groq API key at: https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key-here

# Firebase Push Notifications
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# OAuth - Google (Update with real credentials from provider consoles)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# OAuth - Facebook
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/v1/auth/facebook/callback

# OAuth - Apple
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key
APPLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/apple/callback

# OAuth - TikTok
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_CALLBACK_URL=http://localhost:3000/api/v1/auth/tiktok/callback

# Monitoring
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
ENABLE_APM=true
HEALTH_CHECK_ENABLED=true